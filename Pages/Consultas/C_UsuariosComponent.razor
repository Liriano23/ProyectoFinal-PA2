@page "/ConsultaUsuarios"



<h3>Consulta Usuarios</h3>

<div class="row">
    <div class="col-1">
        <label>Filtro</label>
    </div>

    <div class="col-sm">
        <select @bind="opcion" class="form-control">
            <option value="0">Todo</option>
            <option value="1">Usuario Id</option>
            <option value="2">Nombres</option>
            <option value="3">Apellido</option>
            <option value="4">Cedula</option>
            <option value="5">Sexo</option>
            <option value="6">Dirección</option>
            <option value="7">Telefónio</option>
            <option value="8">Celular</option>
            <option value="9">Email</option>
            <option value="10">Tipo Usuario</option>
            <option value="11">Nombre usuario</option>
            <option value="12">Fecha Ingreso</option>
        </select>
    </div>

    <div class="col-1">
        <label>Criterio</label>
    </div>

    <div class="col">
        <input type="text" @bind="criterio" class="form-control" />
    </div>

    <div class="col-lg">
        <button class="btn btn-primary" @onclick="MostrarDatos">Consultar</button>
    </div>
</div>




@if (lista == null)
{
    <h3>No existen usuarios en la base de datos</h3>
}
else
{
    <table class="table table-dark" style="margin-top: 5px;">
        <thead>
            <tr>
                <th>Usuario Id</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Cedula</th>
                <th>Sexo</th>
                <th>Direcció</th>
                <th>Telefóno</th>
                <th>Celular</th>
                <th>Email</th>
                <th>Tipo Usuario</th>
                <th>Nombre Usuario</th>
                <th>Fecha Ingreso</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var list in lista)
            {
            <tr>
                <td>@list.UsuarioId</td>
                <td>@list.Nombres</td>
                <td>@list.Apellidos</td>
                <td>@list.Cedula</td>
                <td>@list.Sexo</td>
                <td>@list.Direccion</td>
                <td>@list.Telefono</td>
                <td>@list.Celular</td>
                <td>@list.Email</td>
                <td>@list.TipoUsuario</td>
                <td>@list.NombreUsuario</td>
                <td>@list.FechaIngreso</td>
            </tr>
            }
        </tbody>
    </table>
}


@code {
        List<Usuarios> lista = new List<Usuarios>();
    private decimal total = 0;
    private string opcion = "0";
    private string criterio = "";

    protected override void OnInitialized()
    {
        lista = UsuariosBLL.GetList(x => true);
    }

    private void MostrarDatos()
    {
        int elegido = Convert.ToInt32(opcion);

        if (criterio.Trim().Length > 0 && criterio != "")
        {
            switch (elegido)
            {
                case 0:
                    {
                        lista = UsuariosBLL.GetList(x => true);
                    }
                    break;

                case 1:
                    {
                        int id;
                        id = Convert.ToInt32(criterio);
                        lista = UsuariosBLL.GetList(x => x.UsuarioId == id);
                    }
                    break;

                case 2:
                    {
                        lista = UsuariosBLL.GetList(x => x.Nombres == criterio);
                    }
                    break;

                case 3:
                    {
                        lista = UsuariosBLL.GetList(x => x.Apellidos == criterio);
                    }
                    break;

                case 4:
                    {
                        lista = UsuariosBLL.GetList(x => x.Cedula == criterio);
                    }
                    break;

                case 5:
                    {
                        lista = UsuariosBLL.GetList(x => x.Sexo == criterio);
                    }
                    break;

                case 6:
                    {
                        lista = UsuariosBLL.GetList(x => x.Direccion == criterio);
                    }
                    break;

                case 7:
                    {
                        lista = UsuariosBLL.GetList(x => x.Telefono == criterio);
                    }
                    break;

                case 8:
                    {
                        lista = UsuariosBLL.GetList(x => x.Celular == criterio);
                    }
                    break;

                case 9:
                    {
                        lista = UsuariosBLL.GetList(x => x.Email == criterio);
                    }
                    break;

                case 10:
                    {
                        lista = UsuariosBLL.GetList(x => x.TipoUsuario == criterio);
                    }
                    break;

                case 11:
                    {
                        lista = UsuariosBLL.GetList(x => x.TipoUsuario == criterio);
                    }
                    break;
            }
        }
        else if (criterio == "")
        {
            total = 0;
            lista = UsuariosBLL.GetList(x => true);
        }
        else
        {
            total = 0;
            lista = UsuariosBLL.GetList(x => true);
        }
    }

}