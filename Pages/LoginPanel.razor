@page "/LogInPage"

@using System.Web

@inject NavigationManager NavigationManager
@inject IToastService toastService


<style>
    .titulo {
        /*position: absolute;*/
        font-size: 2.9vw;
        margin-bottom: 10%;
        margin-bottom: 10%;
        /*left: 50%;*/
        text-align: center;
        color: white;
        font-style: normal;
        /*transform: translate(-50%, -50%);*/
        font-family: 'Droid Serif', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
    }
</style>

<div class="container">


    <div style="        margin: 0;
        padding: 0;
        box-sizing: border-box;
        max-width: 500px;
        background-image: linear-gradient(180deg, rgb(5, 39, 103) 0%, #3a0647 70%);
        box-shadow: 7px 13px 37px #000;
        padding: 30px;
        margin: auto;
        margin-top: 100px;
        border-radius: 4px;
    ">


        <h1 class="titulo">Inicio de Sesion</h1>

        <EditForm Model="Usuario">
            <div class="form-group">
                <label class="text-white">Usuario</label>
                <InputText @bind-Value="Usuario.NombreUsuario" class="form-control" />
            </div>

            <div class="form-group">
                <label class="text-white">Contraseña </label>
                <input type="password" class="form-control" @bind-value="Usuario.Contrasena" />
            </div>

            <div class="form-group">
                <a class="btn btn-success btn-block"
                   href="/login?paramUsername=@encode(Usuario.NombreUsuario)&paramPassword=@encode(Usuario.Contrasena)" target="_top">Login</a>

                <a class="btn btn-danger btn-block" href="/">Volver al Home</a>
            </div>
        </EditForm>

    </div>
</div>

@code {

    public Usuarios Usuario { get; set; }


    protected override void OnInitialized()
    {
        Usuario = new Usuarios();
    }


    private string encode(string param)
    {
        return HttpUtility.UrlEncode(param);
    }


}